{
  "manifest_version": 2,

  "name": "Checkit",
  "description": "Turn any list into a checklist! Great for recipes, how-to's, listicles, homework, and productivity!",
  "author": "Eric David Smith",
  "version": "1.0.0",

  "icons": {
    "34": "icon-34.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": ["activeTab", "<all_urls>"],

  "browser_action": {
    "default_icon": "icon-128.png",
    "default_popup": "popup.html"
  }
}
